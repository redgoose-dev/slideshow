{
  "name": "slideshow",
  "version": "2.0.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "NODE_ENV=development vite --config config/vite.dev.config.js",
    "build-docs": "NODE_ENV=production vite build --config config/vite.docs.config.js --emptyOutDir",
    "build-libs": "bunx --bun vite build --config config/vite.build.config.js --emptyOutDir",
    "build": "bun run build-libs && bun run build-docs",
    "preview": "NODE_ENV=production bun run --bun vite preview"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "@types/bun": "^1.1.9",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/language-server": "^2.1.6",
    "autoprefixer": "^10.4.20",
    "bun": "^1.1.28",
    "esbuild": "^0.23.1",
    "esbuild-plugin-vue3": "^0.4.2",
    "lucide": "^0.441.0",
    "pinia": "^2.2.2",
    "sass": "^1.79.1",
    "vite": "^5.4.6",
    "vue": "^3.5.6"
  }
}