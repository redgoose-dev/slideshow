{
  "name": "slideshow",
  "version": "1.1.0",
  "main": "main.js",
  "repository": "https://github.com/redgoose-dev/slideshow.git",
  "author": {
    "name": "redgoose",
    "email": "scripter@me.com",
    "url": "https://redgoose.me"
  },
  "license": "MIT",
  "scripts": {
    "docs": "rm -rf docs && git checkout main docs",
    "dev": "electron ./main.js --dev",
    "build": "rm -rf dist && yarpm run build:mac && yarpm run build:win",
    "build:mac": "electron-builder --mac --dir ",
    "build:win": "electron-builder --win nsis --dir --x64 && rm -rf dist/win-unpacked"
  },
  "build": {
    "appId": "redgoose.slideshow",
    "productName": "Slideshow",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "resource/icons/icon.ico"
    },
    "mac": {
      "target": "default",
      "icon": "resource/icons/icon.icns",
      "category": "public.app-category.entertainment"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^12.0.7",
    "electron-builder": "^22.11.4",
    "yarpm": "^1.1.1"
  }
}
