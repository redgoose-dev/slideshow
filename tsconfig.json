{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [ "node_modules", "dist" ],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [ "src/*" ]
    },
    "pretty": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
  }
}
